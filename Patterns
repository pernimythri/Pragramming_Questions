public static void pattern(int n) {
        int x = 1;
        for (int i = 1; i <= n; i++) {
            if (x <= 4) {
                System.out.printf("%d ", x);
                x++;
            } else {
                x = 1;
                System.out.print(x+" ");
                x++;
            }
        }
    }


