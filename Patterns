public class Main
{
    public static void print(int start, int end, int step) {
        if (start <= end) {
             for (int i = start; i <= end; i += step)
                 System.out.print(i + " ");
     }
    else {
        for (int i = start; i >= end; i -= step)
            System.out.print(i + " ");
        }
    }

	public static void main(String[] args) {
        print(1,9,2);
        System.out.println();
        print(15,3,3);
	}
}
